<h1>Signup</h1>
<%= form_for @user,url:yield(:path) do |f| %>
  <!-- Implement error handlings and showing a message -->
  <%= f.label :name%>
  <%= f.text_field :name %>
  <br/>
  <br/>
  <%= f.label :email%>
  <%= f.email_field :email %>
  <br/>
  <br/>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br/>
  <br/>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br/>
  <br/>
  <%= f.submit %>
<% end %>
